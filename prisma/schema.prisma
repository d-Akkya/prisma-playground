generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int       @id @default(autoincrement())
  email   String    @unique
  name    String?
  post    Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  user      User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id   Int
  content   String?
  published Boolean @default(false)
  authorId  Int
  userId    Int?
}
